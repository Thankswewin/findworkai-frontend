# Frontend Environment Variables - Vercel + Render Setup
# Copy this file to .env.local and fill in your actual values

# Backend API URL - Update with your Render backend URL
NEXT_PUBLIC_API_URL=https://your-backend.onrender.com/api/v1

# Google Maps API - Set in Vercel dashboard
NEXT_PUBLIC_GOOGLE_MAPS_KEY=your_google_maps_api_key_here

# OpenRouter API - Only if frontend needs direct AI access (set in Vercel dashboard)
# NEXT_PUBLIC_OPENROUTER_API_KEY=your_openrouter_key

# App Configuration
NEXT_PUBLIC_APP_NAME=FindWorkAI
NEXT_PUBLIC_APP_VERSION=2.0.0

# Authentication Secret (generate with: openssl rand -base64 32)
# Set this in Vercel dashboard
NEXTAUTH_SECRET=your_generated_secret_here
NEXTAUTH_URL=https://your-frontend.vercel.app

# Supabase Configuration - Set in Vercel dashboard
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database URL (automatically provided by Supabase)
DATABASE_URL=your_supabase_database_url

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_DEBUG_MODE=false

# Environment
NODE_ENV=production
